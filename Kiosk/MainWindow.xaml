<mah:MetroWindow x:Class="Kiosk.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d" 
                 Title="KIOSK" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" 
                 ShowTitleBar="False"
                 ContentRendered="MainWindow_OnContentRendered">
    <mah:MetroWindow.Background>
        <ImageBrush ImageSource="Resources/bg.jpg"/>
    </mah:MetroWindow.Background>
    <Grid x:Name="Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <mah:TransitioningContentControl x:Name="LeftMenuTransition" 
                                         Content="{Binding LeftTransitionContent}" 
                                         Grid.Column="1" Grid.Row="1" Transition="Right" />
        <mah:TransitioningContentControl x:Name="RightMenuTransition" 
                                         Content="{Binding RightTransitionContent}" 
                                         Grid.Column="2" Grid.Row="1" Transition="Left" />

        <mah:TransitioningContentControl x:Name="CenterTransition" Visibility="{Binding IsCenterContentVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Content="{Binding CenterTransitionContent}" MouseDoubleClick="CenterTransition_OnMouseDoubleClick"
                                         Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Transition="Up" />
    </Grid>

</mah:MetroWindow>
